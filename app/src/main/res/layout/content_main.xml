<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.vdmorozov.obd2cloud.MainActivity"
    tools:showIn="@layout/app_bar_main"
    android:textAppearance="?android:attr/textAppearanceMedium">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/main_summary_title"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textView"
        android:padding="5dip" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true"
        android:id="@+id/tableLayout"
        android:stretchColumns="*"
        android:background="#e4e4e4"
        android:padding="5dip"
        >

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:text="Последнее соединение"
                android:gravity="left"
                android:padding="3dip"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content" />
            <TextView
                android:text="2017.06.06 19:58"
                android:gravity="center_horizontal"
                android:padding="3dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <TextView
                android:text="Пробег"
                android:gravity="left"
                android:padding="5dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="110 536 км"
                android:gravity="center_horizontal"
                android:padding="5dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <TextView
                android:text="Расход топлива"
                android:gravity="left"
                android:padding="5dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="9,5 л / 100 км"
                android:gravity="center_horizontal"
                android:padding="5dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <TextView
                android:text="Средняя скорость"
                android:gravity="left"
                android:padding="5dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="42 км/ч"
                android:gravity="center_horizontal"
                android:padding="5dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <TextView
                android:text="Максимальная скорость"
                android:gravity="left"
                android:padding="5dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="142 км/ч"
                android:gravity="center_horizontal"
                android:padding="5dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <TextView
                android:text="Средние обороты двигателя"
                android:gravity="left"
                android:padding="5dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="3561 об/мин"
                android:gravity="center_horizontal"
                android:padding="5dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <TextView
                android:text="Температура двигателя"
                android:gravity="left"
                android:padding="5dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="98 °C"
                android:gravity="center_horizontal"
                android:padding="5dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </TableRow>


    </TableLayout>

    <LinearLayout
        android:paddingTop="16dip"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Подробно"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:padding="5dip"
            />

        <com.jjoe64.graphview.GraphView
            android:layout_width="match_parent"
            android:layout_height="200dip"
            android:id="@+id/graph" />

    </LinearLayout>

</LinearLayout>
